generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Computer {
  id            Int         @id @default(autoincrement())
  dpt_id        Int
  group_id      Int
  network_ip_id String      @unique
  code          String?
  user          String
  sector        String?
  hostname      String?
  mac           String?
  processor     String?
  mem           String?
  hd            String?
  so            String?
  group         Group       @relation(fields: [group_id], references: [id])
  ip            Ip_address  @relation(fields: [network_ip_id], references: [network_ip])
  departament   Departament @relation(fields: [dpt_id], references: [id])

  @@map("Computers")
}

model Group {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  group Computer[]

   @@map("Groups")
}

model Departament {
  id        Int        @id @default(autoincrement())
  name      String @unique
  Computers Computer[]
  Printers  Print[]
  Phones    Phone[]

   @@map("Departaments")
}

model Network_address {
  id      Int          @id @default(autoincrement())
  address String @unique
  Ips     Ip_address[]

   @@map("Networks_addresses")
}

model Ip_address {
  id         Int             @id @default(autoincrement())
  network_id Int
  ip         String
  network_ip String          @unique
  network    Network_address @relation(fields: [network_id], references: [id])
  pc         Computer?
  printer    Print?
  phone      Phone?

   @@map("Ips_addresses")
}

model Print {
  id            Int         @id @default(autoincrement())
  network_ip_id String      @unique
  dpt_id        Int
  sector        String?
  hostname      String?
  model         String
  serial        String
  description   String?
  code          String?
  ip            Ip_address  @relation(fields: [network_ip_id], references: [network_ip])
  departament   Departament @relation(fields: [dpt_id], references: [id])

   @@map("Printers")
}

model Phone {
  id            Int         @id @default(autoincrement())
  dpt_id        Int
  network_ip_id String      @unique
  code          String?
  phone_number  String
  sector        String?
  model         String?
  ip            Ip_address  @relation(fields: [network_ip_id], references: [network_ip])
  departament   Departament @relation(fields: [dpt_id], references: [id])

   @@map("Phones")
}

enum Role {
  USER
  ADMIN
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)

   @@map("Users_Admins")
}
